<arooa:descriptor  xmlns:arooa="http://rgordon.co.uk/oddjob/arooa"
    prefix="resolve" namespace="oddjob:resolve">
	<components>
		<arooa:bean-def element='resolve'
						className='org.oddjob.maven.jobs.ResolveJob'>
			<design>
				<design:form xmlns:design="arooa:design">
					<formItems>
						<design:group bordered="true" title="General">
							<formItems>
								<design:text property="name" title="Name"/>
								<design:single property="dependencies" title="Dependencies"/>
							</formItems>
						</design:group>
						<design:group bordered="true" title="Optional">
							<formItems>
								<design:single property="resolverSession" title="Resolver Session"/>
								<design:text property="noSettingsRepos" title="No Settings Repos"/>
								<design:text property="noDefaultRepos" title="No Default Repos"/>
								<design:indexed property="remoteRepositories" title="Remote Repos"/>
							</formItems>
						</design:group>
					</formItems>
				</design:form>
			</design>
			<properties>
				<arooa:property name="arooaSession" type="HIDDEN"/>
			</properties>
		</arooa:bean-def>
	</components>
	<values>
		<arooa:bean-def element='dependency'
						className='org.oddjob.maven.types.Dependency'>
		</arooa:bean-def>
		<arooa:bean-def element='dependencies'
						className='org.oddjob.maven.types.DependenciesFactory'>
		</arooa:bean-def>
		<arooa:bean-def element='session'
						className='org.oddjob.maven.types.ResolverSessionType'>
            <design>
                <design:form xmlns:design="arooa:design">
                <formItems>
                    <design:tabs>
                        <formItems>
                            <design:group title="General">
                                <formItems>
                                    <design:single property="localRepository" title="Local Repository"/>
                                    <design:single property="userProperties" title="User Properties"/>
                                    <design:single property="userSettings" title="User Settings"/>
                                    <design:text property="noDefaultUserSettings" title="No Default User Settings"/>
                                    <design:single property="globalSettings" title="Global Settings File"/>
                                    <design:text property="noDefaultGlobalSettings" title="No Default Global Settings"/>
                                </formItems>
                            </design:group>
                            <design:group title="Mirrors">
                                <formItems>
                                    <design:indexed property="mirrors" title="Mirrors"/>
                                </formItems>
                            </design:group>
                            <design:group title="Proxies">
                                <formItems>
                                    <design:indexed property="proxies" title="Proxies"/>
                                </formItems>
                            </design:group>
                            <design:group title="Authentications">
                                <formItems>
                                    <design:indexed property="authentications" title="Authentications"/>
                                </formItems>
                            </design:group>
                        </formItems>
                    </design:tabs>
                </formItems>
                </design:form>
            </design>
		</arooa:bean-def>
	</values>
</arooa:descriptor>